<!DOCTYPE html>
<html>
<head> 
    <meta charset="UTF-8">
    <%- include('../partials/head'); %>
	<meta name="viewport" content="initial-scale=1.0">
    <title>Maps JavaScript API</title>
	<style> 
  	  #map {
        height: 100%;
      }
     
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
	</style> 
</head>  
	<body>
    <%- include('../partials/navbar'); %>
    <div class="container text-center">
      <div id ="map"> </div> 
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDa9mXPgmEQT9Dvoj5rzMR-OGulujNBk7M&callback=initMap" async defer></script>
	<script>
		
      var map;
  	 function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
		  center: {lat: 21.1595143, lng: -100.9337239},
          zoom: 13,
        });
        var marker = new google.maps.Marker({
          position: {lat: 21.1595143,lng: -100.9337239},
          map: map,
	  title: 'Boutique'
        });
      }
 
      
	</script>
    </div>
		
  <%- include('../partials/script'); %>
  <%- include('../partials/footer'); %>
  
	</body> 
</html>