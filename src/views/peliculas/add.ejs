<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="../stylesheets/style.css">
  <style>
    footer {
      margin-top: 30%;
    }
  </style>
</head>

<body class="Fondo">
    <%- include('../partials/navbar'); %>
    <div class="container">
        <% if (mensaje) {%>
            <div class="alert alert-danger" role="alert">
                <% mensaje %>
            </div>
        <% } %>
      <div class="card">
          <div class="card-header">
            <h1 id="MiTitulo" class="text-center">Agregar Película</h1>
          </div>
          <div class="card-body">
              <form action="/peliculas/add" method="post">
            <div class="form-group">
                <label> Id: </label>
                <input type="text" class="form-control" name="Id_Pelicula" value="<%= Id_Pelicula%>" autocomplete="off"/>
            </div>
            <div class="form-group">
                <label> Título: </label>
                <input type="text" class="form-control" name="Titulo" value="<%= Titulo%>" autocomplete="off"/>
            </div>
            <div class="form-group">
                <label>Director</label>
                <select name="Nombre_Director" class="form-control" required>

                    
                    <% for ( var i = 0 ; i < datos1.length ; i++){ %>
                    <option value="<%= datos1[i].Nombre + ' ' + datos1[i].Apellidos%>"><%= datos1[i].Nombre + ' ' + datos1[i].Apellidos%></option>
                    <% } %>
                    

                </select>
            </div>
            <div class="form-group">
                <label>Actor</label>
                <select name="Nombre_Actor" class="form-control" required>

                    
                    <% for ( var i = 0 ; i < datos2.length ; i++){ %>
                    <option value="<%= datos2[i].Nombre + ' ' + datos2[i].Apellidos%>"><%= datos2[i].Nombre + ' ' + datos2[i].Apellidos%></option>
                    <% } %>
                    

                </select>
            </div>
            <div class="form-group">
                <label> Año: </label>
                <input type="text" class="form-control" name="Año" value="<%= Año%>" autocomplete="off"/>
            </div>
            <div class="form-group">
                <label> Categoria: </label>
                <input type="text" class="form-control" name="Categoria" value="<%= Categoria%>" autocomplete="off"/>
            </div>
            <div class="form-group text-center">
                <input type="submit" class="btn btn-info" value="Agregar" />
                <a class="btn btn-info edit" href="/peliculas">Cancelar</i></a>
            </div>
        </form>
          </div>
      </div>
    </div>

  <%- include('../partials/script'); %>
  <%- include('../partials/footer'); %>
</body>

</html>